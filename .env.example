# PersonaPlex Environment Variables
# Copy to .env and fill in values

# Required: HuggingFace token (needs access to nvidia/personaplex-7b-v1)
HF_TOKEN=your_huggingface_token

# Service port (default: 8998)
PORT=8998

# Device: cuda or cpu
DEVICE=cuda

# Offload model to CPU if GPU OOM (true/false)
CPU_OFFLOAD=false

# Auto-unload model after idle seconds
GPU_IDLE_TIMEOUT=300

# GPU ID to use (auto-selected by start.sh)
NVIDIA_VISIBLE_DEVICES=0

# HuggingFace cache directory
HF_CACHE=~/.cache/huggingface
